@page
@model PizzaCreator.Pages.Forms.CustomPizzaModel
@{
}
<div class="text-center container">
    <h1>Create your Own Pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name" /><br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce" /> Tomato Sauce <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" /> Cheese <br />
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Cheese" /> Beef <br />
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Cheese" /> Ham <br />
        <input type="checkbox" asp-for="Pizza.MushRoom" placeholder="Cheese" /> Mushroom <br />
        <input type="checkbox" asp-for="Pizza.Pepperoni" placeholder="Cheese" /> Peperoni <br />
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Cheese" /> Pineapple <br />
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Cheese" /> Tuna <br />
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>
